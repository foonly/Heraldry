<?php

echo "
	<div class='armscontainer'>
		<h2 class='header'><a href='?template=my_arms_list'>Coat Of Arms - My Arms</a></h2>
		<table class='armslist'>
			<tr>
				<th></th>
				<th><a href='?template=my_arms_list&amp;sort=nam'>Name</a></th>
				<th><a href='?template=my_arms_list&amp;sort=dati'>Date</a></th>
				<th><a href='?template=my_arms_list&amp;sort=creator'>Creator</a></th>
			</tr>
			";
		switch($_GET[sort]) {
			case "dati":
				$sr = "coa.dati desc";
			break;
			case "creator":
				$sr = "users.lname, users.fname";
			break;
			default:
				$sr = "coa.nam";
			break;
		}
		$query = "
			select	coa.id,
						coa.nam,
						date_part('epoch',coa.dati) as dati,
						coa.banner,
						users.fname,
						users.lname
			from		$setting[schema].coatofarms coa left join
						users
			on			coa.creator users.id
			where		creator = '$_SESSION[id]'
			order by	$sr, nam, id
			";
		$ca = pg_query($conn,$query);
		while ($ca_r = pg_fetch_array($ca)) {
			$link = "?template=arms&amp;id=$ca_r[id]&amp;main=$_GET[main]&amp;group=$_GET[group]";
			echo "
				<tr>
					<td style='width: 60px;'>
						<a href='$link'>
							<img src='$setting[rpath]/render.php?type=coa&amp;size=60&amp;id=$ca_r[id]&amp;format=png'/><br/>
						</a>
					</td>
					<td>
						<a href='$link'>
							$ca_r[nam]
						</a>
					</td>
					<td>
						<a href='$link'>
							".date("d-m-Y",$ca_r[dati])."
						</a>
					</td>
					<td>
						<a href='$link'>
							$ca_r[lname], $ca_r[fname]
						</a>
					</td>
					<td>
						<a href='$link'>
							Delete
						</a>
					</td>
				</tr>
				";
		}
		echo "
			</table>
	</div>
	";

?>